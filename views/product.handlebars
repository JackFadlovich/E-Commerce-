{{#each products as |product|}}
  <div class="main-card">
    <div class="main-card-header">
      <a href="/category/{{category}}">{{category}}</a>
    </div>
    <div class="card-body">
      <p>
        <h3>
          Description
        </h3>
        {{product_description}}
      </p>
      <p>
        <h3>
          Category
        </h3>
        {{category}}
      </p>
      <p>
        <h3>
          Manufacturer
        </h3>
        {{manufacturer}}
      </p>
      <p>
        <h3>
          Price
        </h3>
        ${{price}}.00
      </p>
    </div>
  </div>
{{/each}}
